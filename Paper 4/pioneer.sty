% Change these for each new volume/number:

\def\theVolume{1}
\def\theMonth{September}
\def\theYear{2016}


% Default values:

\def\theAuthor{Tony Lu}
\def\shortTitle{}
\def\pageRange{\thepage}

%%%%%%
% Fancy running headlines and footlines:

\usepackage{fancyhdr}

\fancypagestyle{titlepage}{%  This is just for the Title Page for each article
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \fancyfoot[L]{\copyright\  \theYear\ by the author.}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}


\fancypagestyle{pioneer}{%  This is for each subsequent page, double sided
  \fancyhf{}
  \fancyhead[LE,RO]{\em \thepage}
  \fancyhead[RE]{\em \theAuthor\hskip 1cm}
  \fancyhead[LO]{\hskip 0cm\em  \if!\shortTitle! \@title \else\shortTitle\fi }
  %
  \fancyfoot[C]{\thepage}
  \fancyfoot[RE,LO]{\theMonth\ \theYear}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}


\def\blankpage{% print an empty page (usually even page)
        \onecolumngrid
        \newpage\null\def\theAuthor{}\newpage}

